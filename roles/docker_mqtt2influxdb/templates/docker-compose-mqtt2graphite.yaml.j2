  mqtt2influxdb:
    image: revenberg/mqtt2influxdb:latest
    container_name: mqtt2influxdb
    restart: always
    environment:
      - LOG_LEVEL=DEBUG
      - MQTT_ADDRESS={{ ip_address }}
      - MQTT_TOPIC=#
      - INFLUXDB_ADDRESS={{ ip_address }}
      - CARBON_ADDRESS=2003
    depends_on:
      - mqtt
      - graphite
    links:
      - mqtt
      - influxdb
