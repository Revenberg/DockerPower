  zigbee:
    image: koenkk/zigbee2mqtt:latest
    environment:
      - TZ=Europe/Amsterdam
    ports:
      # Frontend port
      - 8088:8088
    volumes:
      - /var/docker-compose/data/zigbee:/app/data
    depends_on:
      - mqtt
    links:
      - mqtt
    devices:
      - "/dev/ttyACM0:/dev/ttyACM0"
    restart: always