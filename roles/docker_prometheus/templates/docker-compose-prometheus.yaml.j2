  prometheus:
    image: prom/prometheus:latest
    container_name: monitoring_prometheus
    restart: always
    volumes:
      - /var/docker-compose/data/prometheus/config:/etc/prometheus/
      - /var/docker-compose/data/prometheus/data:/data/prometheus
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
      - '--storage.tsdb.path=/data/prometheus'
    expose:
      - 9090
    ports:
      - 9090:9090
    user: "0" 
    links:
