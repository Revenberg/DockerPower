map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
}

server {
    listen 80 default_server;
    server_name _;
    location / {
      proxy_pass $scheme://{{ ansible_ssh_host }}:3000/d/5nkT6iRRz/energieverbruik?orgId=1&refresh=1m;
    }
    location /grafana {
      return 301 $scheme://{{ ansible_ssh_host }}:3000;
    }
    location /prometheus {
      return 301 $scheme://{{ ansible_ssh_host }}:9090;
    }
    location /alertmanager {
      return 301 $scheme://{{ ansible_ssh_host }}:9093;
    }
    location /zigbee {
      return 301 $scheme://{{ ansible_ssh_host }}:8080;
    }
}
