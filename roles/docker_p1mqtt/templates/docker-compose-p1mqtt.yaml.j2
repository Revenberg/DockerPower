  p1mqtt:
    image: revenberg/dockerp1mqtt:latest
    container_name: p1mqtt
    environment:
      - MQTT_ADDRESS={{ ip_address }}
      - MQTT_PORT=1883
      - MQTT_TOPIC=reading/p1
    restart: always
    depends_on:
      - mqtt
    links:
      - mqtt
    devices:
      - /dev/ttyUSB0:/dev/ttyUSB0
  