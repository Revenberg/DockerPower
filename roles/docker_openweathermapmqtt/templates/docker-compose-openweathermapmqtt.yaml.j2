  openweathermapmqtt:
    image: revenberg/openweathermapmqtt:latest
    container_name: openweathermapmqtt
    environment:
      - apikey={{ openweathermap_apikey }}
      - WEATHER_COUNTRY=Surhuisterveen,NL
      - WEATHER_LANGUAGE=nl
      - MQTT_ADDRESS={{ ip_address }}
      - MQTT_PORT=1883
      - MQTT_TOPIC=reading/weather
    restart: always
    depends_on:
      - mqtt
    restart: always
    links:
      - mqtt  